pipeline {
    agent any
    tools {
        nodejs 'node-js'
    }
    environment{
        DOCKER_REPO="bstar999"
    }
    stages {
        stage('pull code') {
            steps {
                git branch: 'main', url: 'https://github.com/mohamedbstar413/todo-app-pipeline.git'
            }
        }
        stage('build image and push to the docker hub') {
            steps {
                dir('app-code/frontend') {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh 'docker login -u $USER -p $PASS'
                        sh 'docker build -t front-image-mini .'
                        sh "docker tag front-image-mini ${DOCKER_REPO}/front-image-mini"
                        sh "docker push ${DOCKER_REPO}/front-image-mini"
                    }
                }
            }
        }
    }
}
